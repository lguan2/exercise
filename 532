    public int findPairs(int[] nums, int k) {
        int res = 0;
        Set<Integer> set = new HashSet<>();
        for(int num : nums)
            set.add(num);
        if(k == 0)
            return set.size();
        for(Integer num : set){
            if(set.contains(num + k))
                res++;
        }
        return res;
    }
