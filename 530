    int res = Integer.MAX_VALUE;

    public int getMinimumDifference(TreeNode root) {
        helper(root);
        return res;
    }

    public void helper(TreeNode root){
        if(root.left != null){
            res = Math.min(res, root.val - root.left.val);
            helper(root.left);
        }
        if(root.right != null){
            res = Math.min(res, root.left.val - root.val);
            helper(root.right);  
        }       
    }
